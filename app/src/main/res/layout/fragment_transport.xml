<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="3dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:text="Want to book a Taxi? Looking for lower rates?"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/taxi"
        android:layout_marginTop="25dp"
        android:contentDescription="TODO" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="206dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Halifax Airport Cab provides taxi services from and to Halifax Airport economical and on time around the region of Atlantic Canada.The details of the route and fare details are given in the link below:"
            android:textColor="#ffffff"
            android:textSize="15sp" />


    </LinearLayout>



    <Button
        android:id="@+id/Button2"
        android:layout_width="250dp"
        android:layout_height="53dp"
        android:onClick="open"
        android:text="open halifax airport cab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="OnClick"
        android:layout_marginTop="300dp"/>
</RelativeLayout>