<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="#EBF0E9"
    tools:context=".AccomodationFragment"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:fontFamily="@font/noto_sans_bold"
        android:text="Being  an International student, meeting the accommodation and accessibility needs is important. There are various websites  like Kijiji , Airbnb which provides list of places for temporary rent or lease.There are some places near Dalhousie University with student neighbourhood.Below are some useful websites in which one could refer."
        android:gravity="clip_horizontal"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="HardCodedText,MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        />

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        android:layout_height="wrap_content"
        android:layout_width="420dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        android:layout_below="@+id/textView4">

        <LinearLayout
            android:id="@+id/Kijijiborder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignStart="@+id/card_view1"
            android:orientation="horizontal"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/noto_sans_bold"
                    android:text="Kijiji"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView6"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/noto_sans_bold"
                    android:padding="8dp"
                    android:text="Kijiji is the most popular online classified service in Canada. One could book rental apartments in it."
                    android:textColor="@color/colorBlack"
                    android:textSize="13dp" />

            </LinearLayout>


            <Button
                android:id="@+id/Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:background="@drawable/custom_button"
                android:fontFamily="noto_sans_bold"
                android:onClick="open"
                android:text="Book"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="OnClick" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view1"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:id="@+id/Airbnbborder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/noto_sans_bold"
                    android:text="Airbnb"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView7"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/noto_sans_bold"
                    android:gravity="clip_horizontal"
                    android:padding="8dp"

                    android:text="Airbnb is an online marketplace which lets people rent out their properties or spare rooms to guests."
                    android:textColor="@color/colorBlack"
                    android:textSize="13dp" />

            </LinearLayout>

            <Button
                android:id="@+id/Button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/custom_button"
                android:fontFamily="noto_sans_bold"
                android:onClick="open"
                android:text="Book"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="OnClick" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view3"
        android:layout_width="396dp"
        android:layout_height="136dp"
        android:layout_below="@id/card_view2"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:id="@+id/killamreitborder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/noto_sans_bold"
                    android:gravity="clip_horizontal"
                    android:text="Killamreit"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView8"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/noto_sans_bold"
                    android:padding="8dp"
                    android:text="Killam Properties Inc apartments consists of Quinpool Court and Quinpool Towers."
                    android:textColor="@color/colorBlack"
                    android:textSize="13dp" />

            </LinearLayout>

            <Button
                android:id="@+id/Button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_button"
                android:fontFamily="noto_sans_bold"
                android:onClick="open"
                android:text="Book"
                android:textColor="#FFFFFF"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="OnClick" />

        </LinearLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>